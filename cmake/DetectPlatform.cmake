if(CMAKE_SYSTEM_PROCESSOR MATCHES "[Aa][Rr][Mm]")
	set(PIXFC_TARGET_PROCESSOR "ARM" CACHE STRING "Target is ARM CPU")
	message("Target CPU is ARM")
elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "i?86")
	set(PIXFC_TARGET_PROCESSOR "Intel x86")
	message("Target CPU is Intel 32-bit")
elseif(CMAKE_SYSTEM_PROCESSOR MATCHES "x86_64")
	set(PIXFC_TARGET_PROCESSOR "Intel x64_64")
	message("Target CPU is Intel 64-bit")
else(CMAKE_SYSTEM_PROCESSOR MATCHES "[Aa][Rr][Mm]")
	message(FATAL_ERROR "Unknown CPU" ${CMAKE_SYSTEM_PROCESSOR})
endif(CMAKE_SYSTEM_PROCESSOR MATCHES "[Aa][Rr][Mm]")
